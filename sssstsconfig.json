{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
